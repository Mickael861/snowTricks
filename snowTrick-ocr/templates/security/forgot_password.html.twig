{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<h1 class='text-center my-5 py-5'>Mot de passe oublié</h1>
<div class="vh-100">
    <div class="position-absolute top-50 start-50 translate-middle">
        <div class="d-flex flex-column justify-content-center align-items-center">
            <div>
                <form action="" method="post" style="width:450px">
                    <div class="mb-3">
                        <label for="user_name" class="form-label">Nom d'utilisateur</label>
                        <input type="text" class="form-control {% if is_valide == false and is_submited %} is-invalid {% endif %}" name="user_name">
                        {% if is_valide == false and is_submited %}
                            <div class="invalid-feedback">
                                {{ errors }}
                            </div>
                        {% endif %}
                    </div>
                    <button type="submit" class="btn btn-primary d-block m-auto px-4 py-2">Valider</button>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}