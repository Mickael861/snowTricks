{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}

{% block body %}
<h1 class='text-center my-5 py-5'>RÃ©initialisation du mot de passe</h1>
<div class="vh-100">
    <div class="position-absolute top-50 start-50 translate-middle">
        <div class="d-flex flex-column justify-content-center align-items-center">
            <div>
                <form action="" method="post">
                    <div class="mb-3">
                        <label for="password" class="form-label">Nouveau mot de passe</label>
                        <input type="text" class="form-control {% if is_valide == false and is_submited %} is-invalid {% endif %}" name="password">
                        {% if is_valide == false and is_submited %}
                            <div class="invalid-feedback">
                                Le mot de passe est obligatoire
                            </div>
                        {% endif %}
                    </div>
                    <button type="submit" class="btn btn-primary d-block m-auto px-4 py-2">Modifier</button>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}